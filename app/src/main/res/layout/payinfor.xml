<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điền thông tin của bạn"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_bname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên của bạn"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/in_shoesname"
        app:layout_constraintRight_toRightOf="@+id/in_shoesname"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_bphone"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Số điện thoại của bạn"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/in_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/in_id" />

    <EditText
        android:id="@+id/tv_badd"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Địa chỉ của bạn"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/in_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/in_id" />

    <EditText
        android:id="@+id/tv_bmail"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/in_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/in_id" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#4286f4"
        android:text="Xác nhận đơn hàng"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</LinearLayout>